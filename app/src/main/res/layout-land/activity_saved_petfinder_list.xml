<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:showDividers="middle"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/fragmentItemsList"
        android:name="n8.meowme.ui.SavedPetfinderListFragment"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="3"
        tools:layout="@layout/fragment_petfinder_list" />


    <View android:background="@color/colorAccent"
        android:layout_width="2dp"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/petfinderDetailContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.50">
    </FrameLayout>

</LinearLayout>