<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:id="@+id/petfinderImageView"
            android:src="@drawable/background"
            android:scaleType="centerCrop"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/petfinderNameTextView"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Petfinder Name"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breeds"
            android:id="@+id/breedTextView"
            android:layout_below="@+id/petfinderNameTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Updated"
            android:id="@+id/lastUpdatedTextView"
            android:layout_below="@+id/petfinderNameTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:id="@+id/ageTextView"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorAccent"
                android:layout_alignParentBottom="true" />

            <ImageView
                android:id="@+id/dragIcon"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:gravity="bottom|left"
                android:src="@drawable/ic_pets_black_24dp"
                android:layout_gravity="right"
                android:layout_alignTop="@+id/ageTextView"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>